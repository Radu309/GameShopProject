@model IEnumerable<ShoppingService.Models.Review>

@{
ViewData["Title"] = "Index";
Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="Reviews">
    <div class="reviews-body">
        <div class="reviews-container">
            <h1>Reviews List</h1>
            @* <h1> *@
            @*     <form asp-action="Create" method="get"> *@
            @*         <button class="create-btn">Create New Review</button> *@
            @*     </form> *@
            @* </h1> *@

            <!-- Titluri pentru atributele fiecărei recenzii -->
            <div class="review-attributes-header">
                <div class="review-attribute-header">
                    <h3>Rating</h3>
                </div>
                <div class="review-attribute-header">
                    <h3>Comment</h3>
                </div>
                <div class="review-attribute-header">
                    <h3>Date</h3>
                </div>
                <div class="review-attribute-header">
                    <h3>Game</h3>
                </div>
                <div class="review-attribute-header">
                    <h3>User</h3>
                </div>
                <div class="review-attribute-header">
                    <h3>Actions</h3>
                </div>
            </div>

            <ul class="list">
                @foreach (var review in Model)
                {
                <li class="list-item">
                    <div class="review-info">
                        <div class="review-attribute">
                            <p>@review.Rating</p>
                        </div>

                        <div class="review-attribute">
                            <p>@review.Comment</p>
                        </div>

                        <div class="review-attribute">
                            <p>@review.ReviewDate.ToString("MM/dd/yyyy")</p>
                        </div>

                        <div class="review-attribute">
                            <p>@review.Game.Description</p>
                        </div>

                        <div class="review-attribute">
                            @* de afisat numele aici *@
                            <p>@review.User.Id</p>
                        </div>

                        <div class="review-attribute">
                            <form asp-action="Details" method="get">
                                <input type="hidden" name="id" value="@review.Id" />
                                <button type="submit" class="btn btn-info">Details</button>
                            </form>

                            <form asp-action="Delete" method="post">
                                <input type="hidden" name="id" value="@review.Id" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </li>
                }
            </ul>
        </div>
    </div>
</section>

<link rel="stylesheet" href="~/css/reviews/ReviewIndex.css" asp-append-version="true" />